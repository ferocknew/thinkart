<%
'//---------------------------------------------------------
'管理员操作类
'//---------------------------------------------------------
Class WS_admin
	'Private D_PageSize , Arr_GetListContent , PageList , ListCount
	'//--------------------------初始函数-------------------------------
	Private Sub Class_Initialize()
	End Sub
	'//--------------------------析构函数-------------------------------
	Private Sub Class_Terminate()
	End Sub

	'//-------------------------- 主方法 -------------------------------
	Public Sub action(ByVal v_as)
		Select Case v_as
			Case "get"
				WS_admin_getAdminInfo()
			Case Else
				Response.Write("WS.admin")
		End Select
	End Sub

	'//---------------------------------------------------------
	'获取管理员信息
	Private Sub WS_admin_getAdminInfo()
		If WebSiteInfo("AdminName")=Empty Then
			 WebSiteInfo("AdminName")="admin"
		End If

		Call jsonheadResponse()
		Call Jasp.output(Jasp.parse("{""err"":0,""AdminName"":""" + WebSiteInfo("AdminName") + """}").Get(),"json")
	End Sub
End Class
%>